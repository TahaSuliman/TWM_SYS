    <!-- BEGIN: JS Assets-->
    <script src="~/Content/dist/fetch.min.js"></script>

    <script src="~/Content/dist/js/app.js"></script>



    <script>

        $(document).ready(function () {

            var css_2 = '@Session["Style"]';
            if (css_2 == "dark") {
                $(".light").addClass("dark").removeClass("light");
            }
        });

        async function ToggleClass() {

            const response = await fetch("/Home/ToggleClass")
                .catch(error => {
                    console.log("handle error", error);
                });
            const data = await response.json();
            console.log("Style: ", data);

            if (data == "dark") {

            $(".dark").addClass("light").removeClass("dark");

            } else {

            $(".light").addClass("dark").removeClass("light");

            }

        //    return data;
        }
    </script>
    
    <!-- END: JS Assets-->
</body>
